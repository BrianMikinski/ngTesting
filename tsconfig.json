{
    "compilerOptions": {
        "target" : "ES6",
        "module" : "amd",
        "sourceMap": true,
        "sourceRoot": "src/scripts",
        "watch": true,
        "outDir": "wwwroot/scripts",
        "diagnostics": true,
        "rootDir": "src/scripts"
    },
    "compileOnSave": false,

    "filesGlob": [
        "src/**/*",
        "!typings/**",
        "!node_modules/**"
    ],

    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}