{
    "compilerOptions": {
        "target" : "ES6",
        "module" : "amd",
        "sourceMap": true,
        "sourceRoot": "src/scripts",
        "noImplicitAny": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "watch": false,
        "outDir": "wwwroot/scripts",
        "diagnostics": true,
        "rootDir": "src/scripts",
        "typeRoots": [
            "./typings/**/*.d.ts"
        ]
    },
    
    "compileOnSave": false,

    "filesGlob": [
        "src/**/*",
        "!typings/**",
        "!node_modules/**"
    ],

    "exclude": [
        "node_modules"
    ]
}